{
    "manifest_version": 3,
    "name": "SMS Spam Detection Extension",
    "version": "1.0",
    "description": "Chrome extension for SMS spam detection",
    "action": {
        "default_icon": "icon1.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1:5000/"
      ],
      "web_accessible_resources": [
        {
          "resources": ["popup.js"],
          "matches": ["http://*/*", "https://*/*"]
        }
    ]
}
